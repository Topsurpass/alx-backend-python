pipeline {
    agent any

    environment {
        // Define any environment variables if needed
        VENV = "venv"  // Virtual environment name
        DOCKER_IMAGE = "temz/messaging_app-web"
        DOCKER_CREDENTIALS = "7b6e619b-f496-4730-88e5-3f2d6f6fa903"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', 
                url: 'https://github.com/Topsurpass/alx-backend-python',
                credentialsId: 'f693b385-dc93-4553-929f-14590e4ba598'
            }
        }
        stage('Install Dependencies') {
            steps {
                dir('messaging_app') {
                    sh '''
                    rm -rf ${VENV_PATH}
                    python3 -m venv ${VENV}
                    bash -c "source ${VENV}/bin/activate"
                    ${VENV}/bin/pip3 install --upgrade pip
                    ${VENV}/bin/pip3 install -r messaging_app/requirements.txt
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('messaging_app') {
                    sh '''
                    bash -c "source ${VENV}/bin/activate"
                    pytest --junitxml=report.xml
                    '''
                }
            }
        }

        stage('Publish Test Report') {
            steps {
                dir('messaging_app') {
                    junit 'messaging_app/report.xml' // Publishes test report generated by pytest
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t ${DOCKER_IMAGE}:v1.0 .'
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', DOCKER_CREDENTIALS) {
                        sh 'docker push ${DOCKER_IMAGE}:v1.0'
                    }
                }
            }
        }
        
    }

    post {
        always {
            // Clean up workspace
            cleanWs()
        }
        failure {
            // Handle failure cases (optional)
            echo "Pipeline failed. Check logs for details."
        }
        success {
            echo "Pipeline completed successfully!"
        }
    }
}
